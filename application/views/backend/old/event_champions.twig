var champ2 = $('#ech_champion_id_2').val();
var champ3 = $('#ech_champion_id_3').val();

// sire
var champ1 = new Bloodhound({
    identify: function(o) { return o.can_a_s; },
    queryTokenizer: Bloodhound.tokenizers.whitespace,
    datumTokenizer: Bloodhound.tokenizers.obj.whitespace('can_a_s'),
    dupDetector: function(a, b) { return a.can_a_s === b.can_a_s; },

    remote: {
      url: base_url+'backend/canines/search?q=%QUERY',
      wildcard: '%QUERY',
      cache: false
    }
  });

champ1.initialize();
// passing in `null` for the `options` arguments will result in the default
// options being used
$('#champ1-search .typeahead').typeahead(null, {
name: 'champ1',
display: 'can_a_s',
placeholder: false,
source: champ1.ttAdapter(),
templates: {
  empty: [
    '<div class="empty-message">',
      '<h6><strong>Maaf Data Tidak Ditemukan</strong></h6>',
    '</div>'
  ].join('\n'),
