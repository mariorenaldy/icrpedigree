    '</div>'
  ].join('\n'),
  suggestion: function (data) {
      // if (data.can_id !=champ1 || data.can_id != champ3) {
          $('#ech_champion_id_2').val(data.can_id);
          // champ2 = $('#ech_champion_id_2').val();
         return '<a style="color:black;" href="javascript:functionChamp2('+data.can_id+')"><div style="margin-bottom:20px;"><img width="30px" style="float:left; margin:5px;" src="'+base_url+'uploads/canine/'+data.can_photo+'">' + data.can_a_s + '</div></a>';
      // }

 }
}
});

var champ3 = new Bloodhound({
