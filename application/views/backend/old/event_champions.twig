      return '<a style="color:black;" href="javascript:functionChamp1('+data.can_id+')"><div style="margin-bottom:20px;"><img width="30px" style="float:left; margin:5px;" src="'+base_url+'uploads/canine/'+data.can_photo+'">' + data.can_a_s + '</div></a>';
    // }
 }
}
});

