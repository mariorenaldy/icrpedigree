<script src="{{ base_url() }}assets/typeahead.js/dist/typeahead.jquery.min.js"></script>
<script>
var base_url = $('.base_url').val();


function functionChamp1($id){
  $('#ech_champion_id_1').val($id);
}

function functionChamp2($id){
  $('#ech_champion_id_2').val($id);
}

function functionChamp3($id){
  $('#ech_champion_id_3').val($id);
}

